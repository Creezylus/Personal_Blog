<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>

    $(document).ready(function (){
    
        /* Select all elements with class */
        $('.nav-link').mouseenter(function () {
            // Code to be executed when the mouse pointer enters the element (mouseover)
            $(this).removeClass('text-secondary');
            $(this).addClass('nav_hover');
        });
        $('.nav-link').mouseleave(function () {
            // Code to be executed when the mouse pointer leaves the element (mouseout)
            $(this).removeClass('nav_hover');
            $(this).addClass('text-secondary');
        });
        $('#textTitleBox').on('input',function () {
            if($(this).val().trim() !== '')
            {
                $(this).addClass('bg-yellow');
                $(this).removeClass('bg-white');
            }
            else
            {
                $(this).addClass('bg-white');
                $(this).removeClass('bg-yellow');
            }
        });

    });
</script>